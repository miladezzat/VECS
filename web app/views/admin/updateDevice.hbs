<div id="updatedevice">
  <div class="row">
    <div class="col-12">
      <h1>Update Device</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-8 offset-2">
      <form action="/admin/updatedevice/{{device.id}}" method="POST" enctype="multipart/form-data">
          <div class="form-group">
              <label for="name">Name</label>
              <input type="text" class="form-control" id="name" name="name" value="{{device.name}}" required>
          </div>
          <div class="form-group">
            <label for="ip">IP Address</label>
            <input type="text" class="form-control" id="ip" name="ip" value="{{device.ip}}" required>
          </div>
          <div class="form-group">
            <label for="type"> Type</label>
            <input type="text" class="form-control" id="type" name="type" value="{{device.type}}" required>
          </div>
          <div class="form-group">
            <label for="location"> <i class="fas fa-thumbtack"></i> Location</label>
            <input type="text" class="form-control" id="location" name="location" value="{{device.location}}" required>
          </div>
          <div class="form-group">
            <label for="image"><i class="fas fa-image"></i> Device Icon</label>
            <input type="file" class="form-control" id="image" name="image">
          </div>
          <input hidden value="{{device.imagePath}}" name="existImage">
          <hr>
          <button type="submit" class="btn btn-block btn-primary"><i class="fas fa-check"></i> Update A Device</button>
        </form>
    </div>
  </div>
</div>