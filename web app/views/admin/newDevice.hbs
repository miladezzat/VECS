<section id="addnewdevice">
  <div class="row">
    <div class="col-12">
      <h1>Add new Device</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-8 offset-2">
        <form action="/admin/addnewdevice" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter Device Name" required>
            </div>
            <div class="form-group">
              <label for="ip">IP Address</label>
              <input type="text" class="form-control" id="ip" name="ip" placeholder="Enter IP Address" required>
            </div>
            <div class="form-group">
              <label for="type"> Type</label>
              <input type="text" class="form-control" id="type" name="type" placeholder="Enter Type" required>
            </div>
            <div class="form-group">
              <label for="location"> Location</label>
              <input type="text" class="form-control" id="location" name="location" placeholder="Enter Location" required>
            </div>
            <div class="form-group">
              <label for="device_num"> Device Number</label>
              <input type="text" class="form-control" id="device_num" name="device_num" placeholder="Enter Device Number" required>
            </div>
            <div class="form-group">
              <label for="image"> Device Icon</label>
              <input type="file" class="form-control" id="image" name="image" placeholder="Enter Device Icon" >
            </div>
            <hr>
            <button type="submit" class="btn btn-block btn-primary">Add A Device</button>
          </form>
    </div>
  </div>
</section>